<Page
    x:Class="TicketManagementSystem.NewUserRegister"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TicketManagementSystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0044FF"/>
                <GradientStop Color="#FFF2FF0B" Offset="0.973"/>
                <GradientStop Color="#FE0E4EF0" Offset="0.263"/>
                <GradientStop Color="#FE1855E5" Offset="0.162"/>
                <GradientStop Color="#FE4F7FA8" Offset="0.575"/>
                <GradientStop Color="#FEB0CB4A" Offset="0.842"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Orientation="Vertical" Width="1000" Height="800" BorderThickness="2">
            <StackPanel.BorderBrush>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </StackPanel.BorderBrush>
            <StackPanel.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </StackPanel.Background>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Sign Up" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
            <Line X1="0" X2="1000" Stroke="Black" StrokeThickness="3">
                <Line.Fill>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Line.Fill>
            </Line>

            <StackPanel Orientation="Horizontal" Margin="10,30,10,0" >
                <StackPanel Orientation="Vertical" Width="480" Height="600" Margin="0,0,15,0">
                    <StackPanel.BorderBrush>
                        <SolidColorBrush Color="Black" Opacity="0.485"/>
                    </StackPanel.BorderBrush>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Email" FontSize="24"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='6' x:Name="SignUpEmail" FontSize="24"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Password" FontSize="20"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='7' x:Name="SignUpPassword" FontSize="20"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Full name as per MyKad" FontSize="20"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='8' x:Name="SignUpFullName" FontSize="20"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="MyKad No." FontSize="20"/>
                        <TextBlock Text="**" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='9' x:Name="SignUpMyKad" FontSize="20"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Gender" FontSize="20"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <ComboBox x:ConnectionId='10' x:Name="SignUpGender" FontSize="20" Width="480" PlaceholderText="Please Select">
                        <ComboBoxItem x:ConnectionId='11' x:Name="Male" Content="Male"/>
                        <ComboBoxItem x:ConnectionId='12' x:Name="Female" Content="Female"/>
                    </ComboBox>

                </StackPanel>
                <StackPanel Orientation="Vertical" Width="480" Height="600"  >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Confirm email" FontSize="20"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='2' x:Name="SignUpConfEmail" FontSize="20"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Confirm password" FontSize="20"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='3' x:Name="SignUpConfPassword" FontSize="20"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Contact No." FontSize="20"/>
                        <TextBlock Text="*" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='4' x:Name="SignUpContact" FontSize="20"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Confirm MyKad No." FontSize="20"/>
                        <TextBlock Text="**" FontSize="20" Foreground="Red"/>
                    </StackPanel>
                    <TextBox x:ConnectionId='5' x:Name="SignUpConfMyKad" FontSize="20"/>
                </StackPanel>
            </StackPanel>


        </StackPanel>

    </Grid>
</Page>

