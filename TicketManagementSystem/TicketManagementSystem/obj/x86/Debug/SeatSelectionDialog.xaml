<ContentDialog x:ConnectionId='1'
    x:Class="TicketManagementSystem.SeatSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TicketManagementSystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Choose Seat"
    PrimaryButtonText="Cancel"
    SecondaryButtonText="Confirm"
                                                         
                                                             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Define rows here -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <local:SeatSelectionPage />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock x:ConnectionId='2' x:Name="ErrorMessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" Margin="0,20,0,0" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</ContentDialog>

