<Page
    x:Class="TicketManagementSystem.UserManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TicketManagementSystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid >
        <SplitView x:ConnectionId='2' x:Name="menuSplitView" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="240" Background="#D7ECFF">
            <SplitView.Pane>
                <StackPanel Background="#4863A0">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 50">
                        <Button x:ConnectionId='14' x:Name="btnBar" Background="Transparent" Margin="0,10,0,0"                     >
                            <Image Source="Assets/bars.png" Width="30"/>
                        </Button>
                    </StackPanel>

                    <Button x:ConnectionId='10' Name="btnUserMng" Background="#D7ECFF" Margin="0,0,0,30" HorizontalAlignment="Stretch" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 0" Width="230">
                            <Image Source="Assets/user.png" Width="30"/>
                            <TextBlock Text="USER MANAGEMENT" Padding="10" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" />
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='11' x:Name="btnTrainBooking" Background="Transparent" Margin="0 0 0 30" HorizontalAlignment="Stretch"                              >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="230">
                            <Image Source="Assets/booking.png" Width="30"/>
                            <TextBlock Text="BOOKING PAGE" Padding="10" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" />
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='12' x:Name="btnFood" Background="Transparent" Margin="0 0 0 30" HorizontalAlignment="Stretch"                      >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="230">
                            <Image Source="Assets/food.png" Width="30"/>
                            <TextBlock Text="FOODS &amp; DRINKS" Padding="10" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" />
                        </StackPanel>
                    </Button>

                    <Button x:ConnectionId='13' x:Name="btnHelp" Background="Transparent" HorizontalAlignment="Stretch"                      >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="230">
                            <Image Source="Assets/help.png" Width="30"/>
                            <TextBlock Text="HELP PAGE" Padding="10" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
        <StackPanel x:ConnectionId='3' x:Name="rightContent" Orientation="Vertical" Margin="80,0,0,0" >
            <TextBlock Text="USER MANAGEMENT" FontFamily="Bahnschrift SemiBold" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,20"/>
            <Image Source="Assets/ets-logo.png" Height="40" HorizontalAlignment="Left" Margin="0,0,0,10"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,50">
                <Image x:ConnectionId='4' x:Name="userProfile" Source="Assets/user.png" Width="80"/>
                <TextBlock x:ConnectionId='5' x:Name="WelcomeMsg"  FontSize="28" HorizontalAlignment="Center" ></TextBlock>
                <StackPanel Orientation="Vertical" BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0">
                    <Button x:ConnectionId='6' x:Name="MyProfileBtn" FontSize="24" HorizontalAlignment="Stretch" Background="Transparent"  Content="My Profile" Margin="5,5"                            />
                    <Line X1="10" X2="770" Stroke="Gray" StrokeThickness="1"/>
                    <Button x:ConnectionId='7' x:Name="ChangePwBtn" FontSize="24" HorizontalAlignment="Stretch" Background="Transparent"  Content="Change Password" Margin="5,5"                           />
                    <Line X1="10" X2="770" Stroke="Gray" StrokeThickness="1"/>
                    <Button x:ConnectionId='8' x:Name="DeleteAccBtn" FontSize="24" HorizontalAlignment="Stretch" Background="Transparent"  Content="Delete Account" Margin="5,5"                           />
                    <Line X1="10" X2="770" Stroke="Gray" StrokeThickness="1"/>
                    <Button x:ConnectionId='9' x:Name="LogoutBtn"  FontSize="24" HorizontalAlignment="Stretch" Background="Transparent"  Content="Logout" Margin="5,5"                        />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

